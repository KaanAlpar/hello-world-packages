<div class="background-primary dashboard-container">
  <h1 id="dashboard-title">Dashboard</h1>
  <div class="card-product d-flex justify-content-center">
    <div class="user_card">
        <h2>My Packages</h2>
          <ul class="list-group">
            <% current_user.packages.first(4).each do |package| %>
              <%= link_to package_path(package), class: 'text-decoration-none' do %>
              <li class="my-packages-orders">
                  <%= package.name %>
              </li>
              <% end %>
            <% end %>
          </ul>
          <%= link_to 'See more', my_packages_path, class: 'button' %>
          <%= link_to 'Add Package', new_package_path, class: 'button' %>
    </div>
    <div class="user_card">
      <div>
        <h2>My Orders</h2>
        <ul class="list-group">
          <% current_user.orders.first(4).each do |order| %>
            <%= link_to order_path(order), class: 'text-decoration-none' do %>
              <li class="my-packages-orders">
                <%= order.package.name %>
              </li>
            <% end %>
          <% end %>
        </ul>
        <%= link_to 'See More', orders_path, class: 'button' %>
      </div>
    </div>
  </div>
  <div class="card-product d-flex justify-content-center pb-5">
    <%= render 'shared/search_form' %>
  </div>
</div>
