<div class="primary-background py-5">
  <div class="container">
    <h2 class="text-center mb-3">My packages</h2>
    <ul class="list-group">
        <% @packages.each do |package| %>
          <%= link_to package_path(package), class: 'text-decoration-none' do %>
            <li class="list-group-item list-group-item-warning p-2 my-1 d-flex justify-content-between">
              <p><%= package.name %></p>
              <p>Last updated: <%= package.updated_at.strftime("%A, %b %d") %></p>
            </li>
          <% end %>
        <% end %>
    </ul>
    <%= link_to dashboard_path, class: 'button' do  %>
      Dashboard
    <% end %>
    <%= link_to new_package_path, class: 'button' do  %>
      Add package
    <% end %>
  </div>
</div>

