<div class="primary-background pt-5">
  <div class="container mb-5">
    <div class="row">
      <div class="col-8 mb-1 p-1">
        <h2>Items inside this package</h2>
        <div class="d-flex flex-wrap justify-content-start">
          <% @package.items.each do |item| %>
          <div class="package-card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path item.photo, height: 600, width: 600, crop: :fill %>')">
            <p> <%= item.name %> </p>
          </div>
          <% end %>
        </div>
      </div>
      <div class="col-4 mb-1 p-1 align-items-start">
        <h3><%= @package.name %></h3>
        <div>
          <p class="col p-0" style="text-align: justify">Origin: <%= @package.origin %></p>
          <p><%= @package.description %></p>
        </div>
        <div class="col mb-1 p-0">
          <div class="d-flex flex-column align-items-start">
            <h3>Price: $<%= @package.price %></h3>
            <% if @package.user == current_user %>
              <%= link_to 'Add item', new_package_item_path(@package), class: 'add-item-button' %>
            <% else %>
              <%= link_to 'Order', package_order_confirmed_path(@package), class: 'add-item-button' %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
