<%= render 'shared/package_banner' %>
<div class="container mt-3">
  <div class="row">
    <div class="col-sm-9  ">
      <div class="p-3">
        <!-- <p><%#= @package.description %></p> -->
        <h3>Origin: <%= @package.origin %></h3>
      </div>
    </div>
    <div class="col-sm-3">
      <div class="d-flex flex-column align-items-center">
        <h2 class="p-3">Price: $<%= @package.price %></h2>
        <% if @package.user == current_user %>
          <%= link_to 'Add item', new_package_item_path(@package), class: 'button' %>
        <% else %>
          <%= link_to 'Order', package_order_confirmed_path(@package), class: 'button' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
<div class="container">
  <h2>Items inside this package</h2>
  <div class="row">
    <% @package.items.each do |item| %>
    <div class="col-4 mb-1 p-1">
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path item.photo, height: 600, width: 600, crop: :fill %>')">
        <%= item.name %>
      </div>
      </div>
    <% end %>
  </div>
</div>
