<div class="primary-background pt-5 pb-5">
  <div class="container mb-5">
    <div class="row">
      <div class="col-6 mb-1 pr-5">
        <h2>Items inside this package</h2>
        <div class="carousel-container w-80">
          <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
          <div class="carousel-inner">
            <% @package.items.each_with_index do |item, index| %>

              <div class="carousel-item   <%= "active" if index == 0 %>">
                <%= cl_image_tag item.photo, class: "gallery" %>
                <h3><%= item.name %></h3>
              </div>
            <% end %>
              <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                 <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                 <span class="sr-only">Previous</span>
               </a>
               <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                 <span class="carousel-control-next-icon" aria-hidden="true"></span>
                 <span class="sr-only">Next</span>
               </a>
          </div>
          </div>
          <div class="thumbnails">
            <% @package.items.each_with_index do |item, index| %>
            <%= cl_image_tag item.photo, class: "thumbnail" %>
            <% end %>
        </div>
        </div>
      </div>

      <div class="col-4 mt-2 p-1 align-items-start">
        <h3><%= @package.name %></h3>
        <div>
          <p class="col p-0" style="text-align: justify">Origin: <%= @package.origin %></p>
          <p><%= @package.description %></p>
        </div>
        <div class="col mb-1 p-0">
          <div class="d-flex flex-column align-items-start">
            <h3>Price: $<%= @package.price %></h3>
            <% if @package.user == current_user %>
              <%= link_to 'Add item', new_package_item_path(@package), class: 'add-item-button' %>
            <% else %>
              <%= link_to 'Order', package_order_confirmed_path(@package), class: 'add-item-button' %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
