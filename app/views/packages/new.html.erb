<div class="container">
  <h1 class="text-center">add package</h1>
  <div class="background-primary">
    <div class="row justify-content-center">
        <%= simple_form_for @package do |f| %>
          <%= f.input :name %>
          <%= f.input :price %>
          <%= f.input :origin, collection: ["Turkey", "India", "Brazil", "France"]  %>
          <%= f.input :description %>
          <%= f.input :photo %>
          <%= f.input :photo_cache, as: :hidden %>
          <%= f.button :submit, value: "add", class: 'btn btn-outline-secondary' %>
        <% end %>
    </div>
  </div>

  <div class="row justify-content-between m-3">
    <%= link_to '/dashboard', class: "btn btn-secondary btn-lg rounded-pill" do %>
      Cancel
    <% end %>
    <!-- cancel button leads back to dashboard -->
  </div>
</div>
