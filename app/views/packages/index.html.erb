<div class="container">
  <% if @packages.count == 1 %>
    <h1> <%= @packages.count %> result for <%= @search_country %> </h1>
  <% else %>
    <h1> <%= @packages.count %> results for <%= @search_country %> </h1>
  <% end %>
  <div class="row">
    <% @packages.each do |package| %>
      <div class="card-package">
        <%= cl_image_tag(package.photo, width: 400, height: 300, crop: :fill) %>
        <h2> <%= package.name %> </h2>
      </div>
    <% end %>
  </div>
</div>
