<div class="background-primary">
<div class="container">
  <div class="my-3">
    <% if @packages.count == 1 %>
      <h1> <%= @packages.count %> result for <%= @search_country %> </h1>
    <% else %>
      <h1> <%= @packages.count %> results for <%= @search_country %> </h1>
    <% end %>
  </div>
  <div class="row">
    <% @packages.each do |package| %>
      <div class="card-container">
        <%= link_to package_path(package), class: 'text-decoration-none' do  %>
          <div class="card-package">
            <div class="photo-grid">
                <% package.items.first(4).each do |item| %>
                  <%= cl_image_tag(item.photo) %>
                <% end %>
            </div>
          <div class="d-flex flex-column justify-content-between py-2">
            <h2> <%= package.name %> </h2>
            <p>price: $<%= package.price %></p>
          </div>
        <% end %>
      </div>
      </div>
    <% end %>
  </div>
</div>
