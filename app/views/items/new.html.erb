<div class="primary-background p-3">
  <h1 class="text-center">add item</h1>
  <div class="d-flex justify-content-center">
    <div class="user_card">
     <!-- <h2>Add item to: <%#= @package.name %></h2> -->
       <%= simple_form_for [@package, @item] do |f| %>
         <%= label_tag :name %>
         <%= f.input :name, label: false %>

         <%= label_tag :photo %>
         <%= f.input :photo, label: false %>
         <%= f.input :photo_cache, as: :hidden %>
         <%= f.button :submit, class: 'button', value: 'add' %>
       <% end %>
       <%= link_to package_path(@package), class: 'button-flat text-decoration-none' do %>
        Cancel
       <% end %>
     </div>
   </div>
</div>
